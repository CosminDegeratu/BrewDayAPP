@model BrewDayAPP.Brews

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#IdRecipies").change(function () {
            var idRecipies = $("#IdRecipies").val();
            var batchS = $("#BatchSize").val();
            //alert(idRecipies + " AAA " + batchS);
            $("#partialPlaceHolder").load('@(Url.Action("_Index", "IngredientsToSubstract", null, Request.Url.Scheme))?recipiesID=' + idRecipies + "&batchSize=" + batchS);
        });
    });
</script>

